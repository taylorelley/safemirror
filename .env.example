# SafeMirror Development Environment
# Copy to .env and customize as needed:  cp .env.example .env

# --- Database ---
DB_PASSWORD=devpass
DATABASE_URL=postgresql://safemirror:${DB_PASSWORD}@db:5432/safemirror

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- API / Auth ---
SECRET_KEY=dev-secret-key-change-in-prod
DEBUG=true

# --- Celery ---
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# --- Frontend (Next.js) ---
NEXT_PUBLIC_API_URL=http://localhost:8000
