# ====================================
# SafeMirror Enterprise - Production Environment
# ====================================
# Copy this file to .env.prod and fill in the values
# NEVER commit .env.prod to version control!
# ====================================

# ===================
# REQUIRED SETTINGS
# ===================

# JWT Secret Key (MUST CHANGE!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_ME_GENERATE_A_SECURE_KEY

# Database password (MUST CHANGE!)
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD

# ===================
# OPTIONAL SETTINGS
# ===================

# Redis password (recommended for production)
REDIS_PASSWORD=

# Application version (for image tagging)
VERSION=latest

# Port mappings
HTTP_PORT=80
HTTPS_PORT=443

# ===================
# EMAIL SETTINGS
# ===================

# SMTP configuration for notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@safemirror.local

# ===================
# CORS SETTINGS
# ===================

# Allowed origins (comma-separated, e.g., https://safemirror.example.com)
CORS_ORIGINS=

# ===================
# EXTERNAL SERVICES
# ===================

# External database (instead of container)
# DATABASE_URL=postgresql://user:pass@host:5432/safemirror

# External Redis (instead of container)
# REDIS_URL=redis://:password@host:6379/0

# ===================
# MONITORING
# ===================

# Sentry DSN for error tracking
SENTRY_DSN=

# ===================
# BACKUP SETTINGS
# ===================

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# Backup S3 bucket (for cloud backups)
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=
